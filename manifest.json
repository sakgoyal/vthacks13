{
  "author": "Saksham Goyal",
  "name": "Stop the Slop - VT Hax 13",
  "description": "Analyze your Youtube video watching habits and help improve your mental health.",
  "version": "1.1",
  "manifest_version": 3,
  "content_scripts": [{
    "matches": ["*://*.youtube.com/*", "*://youtu.be/*"],
    "js": ["popup_menu.js"],
    "run_at": "document_idle"
  }],
  "background": { "service_worker": "background.js" },
  "host_permissions": ["<all_urls>"],
  "permissions": ["scripting", "activeTab", "declarativeNetRequest", "webRequest", "storage"],
  "$schema": "https://json.schemastore.org/chrome-manifest"
}
